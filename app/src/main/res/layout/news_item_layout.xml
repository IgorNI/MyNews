<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:foreground="@drawable/mid_grey_ripple"
    android:stateListAnimator="@animator/raise"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">
    <com.materialdesign.myapplication.widget.BadgedFourThreeImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_image_id"
        android:layout_width="96dp"
        android:layout_height="24dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:foreground="@drawable/mid_grey_ripple"
        android:stateListAnimator="@animator/raise"
        app:badgeGravity="end|bottom"
        app:badgePadding="16dp"
        />
    <LinearLayout
        android:id="@+id/news_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/item_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:stateListAnimator="@animator/raise"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_text_source_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@animator/raise"
            android:textColor="@color/text_source"
            android:textSize="10sp"
            />
        </LinearLayout>

</LinearLayout>